<% provide(:title, 'inscription') %> <h1>Sign up</h1>
<div class="row">
<div class="col-md-4 col-md-push-4">
  <%= render 'shared/error_messages', object: f.object %>
<%= form_for(@user) do |f| %>
<div class="input-group input-group-lg">
  <span class="input-group-addon" id="sizing-addon1">@</span>
  
  <%= f.text_field :name, class:"form-control", placeholder:"Username" %>
</div>

<div class="input-group input-group-lg">
  <span class="input-group-addon" id="sizing-addon1">@</span>
  <%= f.email_field :email, class:"form-control", placeholder:"Email" %>
</div>

<div class="input-group input-group-lg">
  <span class="input-group-addon" id="sizing-addon1">@</span>
  <%= f.password_field :password, class:"form-control", placeholder:"Password" %>
</div>

<div class="input-group input-group-lg">
  <span class="input-group-addon" id="sizing-addon1">@</span>
  <%= f.password_field :password_confirmation, class:"form-control", placeholder:"password_confirmation" %>
</div>
<%= f.submit "Createmyaccount", class: "btnbtn-primary" %>
<% end %> 
</div>
</div>