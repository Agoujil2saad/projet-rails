<% provide(:title, 'Signup') %> <h1>Sign up</h1>
<div class="row">
<div class="col-md-6col-md-offset-3">
<%= form_for(@user) do |f| %> <%= f.label :nom %>
<%= f.text_field :nom %>
<%= f.label :email %>
<%= f.email_field :email %> <%= f.label :password %>
<%= f.password_field :password %>
<%= f.label :password_confirmation, "Confirmation" %> <%= f.password_field :password_confirmation %>
<%= f.submit "Createmyaccount", class: "btnbtn-primary" %>
<% end %> 
</div>
</div>